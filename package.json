{
  "name": "hrms-api-notification",
  "version": "1.0.0",
  "description": "A scalable and modular API for HRMS (Human Resource Management System) Notification built with Node.js, TypeScript, and Serverless Framework, featuring Express, MongoDB, and AWS integrations.",
  "author": "Dede Ard<me@dedeard.my.id>",
  "scripts": {
    "lint": "eslint '**/*.ts' --quiet --fix",
    "format": "prettier --write '**/*.ts' '**/*.json'  '**/*.yaml'",
    "clean": "rm -rf dist && rm -rf .serverless && rm -rf .aws-sam",
    "build": "npm run clean && tsc && serverless package",
    "offline": "npm run build && serverless offline --stage=local",
    "dev": "ts-node-dev --no-notify --respawn --transpile-only ./src/handler/local.ts"
  },
  "dependencies": {
    "@aws-sdk/client-sns": "^3.637.0",
    "@typegoose/typegoose": "^12.6.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4",
    "joi": "^17.13.3",
    "lambda": "^0.10.3",
    "mongoose": "^8.5.0",
    "morgan": "^1.10.0",
    "serverless-http": "^3.2.0",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.141",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "dotenv": "^16.4.5",
    "esbuild": "^0.20.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^4.0.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^13.7.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  }
}
